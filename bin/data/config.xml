<config>
    <width> 800 </width>
    <height> 600 </height>
    <fps> 60 </fps>
    <graphics>
        <backgroundColor> 30, 30, 30 </backgroundColor>
    </graphics>
    <boids type="regular">
        <amount> 1200 </amount>
        <maxDist> 100 </maxDist>
        <period> 1 </period>
        <maxSpeed> 5 </maxSpeed>
        <graphics>
            <color> 255, 255, 255, 255 </color>
            <size> 2 </size>
        </graphics>
        <behaviour>
            <typeName> separation </typeName>
            <weight> 300000 </weight>
            <influencerType> regular </influencerType>
            <nearnessSelectivity> 2.2 </nearnessSelectivity>
        </behaviour>
        <behaviour>
            <typeName> cohesion </typeName>
            <weight> 2 </weight>
            <influencerType> regular </influencerType>
        </behaviour>
        <behaviour>
            <typeName> alignment </typeName>
            <weight> 0.3 </weight>
            <influencerType> regular </influencerType>
        </behaviour>
        <behaviour> <!-- Escape from predators -->
            <typeName> separation </typeName>
            <weight> 2000 </weight>
            <influencerType> predator </influencerType>
            <nearnessSelectivity> 1 </nearnessSelectivity>
        </behaviour>
    </boids>
    <boids type="predator">
        <amount> 10 </amount>
        <maxDist> 500 </maxDist>
        <period> 1 </period>
        <maxSpeed> 4 </maxSpeed>
        <graphics>
            <color> 255, 0, 0, 255 </color>
            <size> 3 </size>
        </graphics>
        <behaviour> <!-- Prey on regular boids -->
            <typeName> cohesion </typeName>
            <weight> 20 </weight>
            <influencerType> regular </influencerType>
        </behaviour>
        <behaviour> <!-- Predators hunt by themselves -->
            <typeName> separation </typeName>
            <weight> 10000 </weight>
            <influencerType> predator </influencerType>
            <nearnessSelectivity> 0.01 </nearnessSelectivity>
        </behaviour>
    </boids>
</config>
